{
  "plugins": ["prettier", "babel", "react"],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": false,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "rules": {
    "prettier/prettier": [
      2,
      {
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "tabWidth": 2
      }
    ],
    "no-unused-vars": 2,
    "no-undef": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 1
  }
}
